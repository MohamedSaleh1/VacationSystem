    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.emp_ssn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.available_vacationDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee2.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.emp_ssn }) |
                @Html.ActionLink("Details", "Details", new { id = item.emp_ssn }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.emp_ssn })
